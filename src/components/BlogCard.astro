---
declare interface Props {
  title: string;
  publishDate: Date;
  slug: string;
  author: string;
}

const { title, publishDate, slug, author } = Astro.props;
---

<a href={`${slug}`} class='card'>
  <h1 class='text-bmBlue-500 text-3xl'>{title}</h1>
  <h3 class='text-bmBlue-500'>By {author}</h3>
  <h3 class='text-bmBlue-300'>
    {
      publishDate.toLocaleString(undefined, {
        dateStyle: "medium",
      })
    }
  </h3>
</a>
